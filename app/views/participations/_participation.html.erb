<% p = participation %>

<tr id="<%= dom_id(p) %>">
  <td><%= link_to p.user.name, p.user %> (<%= link_to 'posts', user_posts_path( p.user ) %>)</td>
  <td><%= time_ago_in_words p.user.created_at %> ago</td>
  <td><%= p.level_in_words %></td>
  <td>
    <% if p.banned %>
      <%= link_to 'Unban', unban_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
    <% else %>
      <%= link_to 'Ban', ban_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
    <% end %>
    <% if p.level > 0 %>
      <%= link_to 'Promote', promote_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
    <% else %>
      <%= link_to 'Disrank', disrank_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
    <% end %>
    <% if current_user.superuser %>
      <%= link_to 'Edit', edit_user_path(p.user), :class => "btn small" %>
      
        <% if p.user.moderator %>
      		<%= link_to 'Revoke moderator', makemod_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
    	<% else %>
      		<%= link_to 'Make moderator', removemod_participation_path(p), :remote => true, :method => :put, :class => "btn small" %>
   	 <% end %>
      
    <% end %>
  </td>
</tr>

